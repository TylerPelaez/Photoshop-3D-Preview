{
  "compilerOptions": {
    "strict": true,
    "composite": true,
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "resolveJsonModule": true,
    "allowJs": true,
    "checkJs": true,
    "isolatedModules": true,
    "types": ["@adobe/cc-ext-uxp-types", "@types/photoshop", "@types/node"],
    "paths": { "@api/*": ["./api/*"], }
  },
  "include": [
    "src/**/*.d.ts",
    "src/**/*.ts",
    "src/**/*.js",
    "src/*.ts",
    "api/**/*.ts",
    "./uxp.config.ts",
    "package.json"
  ]
}
